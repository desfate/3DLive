<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/user_info_rly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_mine_background">


        <ImageView
            android:id="@+id/message_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:src="@mipmap/live_message_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/message_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="15dp"
            android:text="直播小助手"
            android:textColor="@color/color_text_selected"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/message_img"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="5dp"
            android:text="直播小助手"
            android:textColor="@color/color_user_name"
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@+id/message_img"
            app:layout_constraintTop_toBottomOf="@+id/message_name" />


        <TextView
            android:id="@+id/sign_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/mine_intr_btn_background"
            android:padding="2dp"
            android:text="官方"
            android:textColor="@color/color_btn_text2"
            android:textSize="10sp"
            app:layout_constraintTop_toTopOf="@+id/message_name"
            app:layout_constraintBottom_toBottomOf="@+id/message_name"
            app:layout_constraintLeft_toRightOf="@+id/message_name" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="80dp"
            android:background="@color/color_line"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
