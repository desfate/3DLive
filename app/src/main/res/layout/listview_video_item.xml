<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/square_layout"
        android:padding="2.5dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        tools:ignore="contentDescription">

        <com.futrtch.live.tencent.live.RoundImageView
            android:id="@+id/anchor_btn_cover"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:transitionName="btn"
            app:cover_color="@color/color_mine_background"
            app:radius="10dp"
            app:shape="fillet" />


        <TextView
            android:id="@+id/anchor_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/host_name"
            android:layout_marginLeft="4dp"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/h6" />

        <TextView
            android:id="@+id/host_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="4dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/h5" />


        <TextView
            android:id="@+id/live_members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginRight="4dp"
            android:drawableLeft="@mipmap/visitors"
            android:drawablePadding="2dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/h5" />

        <TextView
            android:id="@+id/live_lbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:drawableLeft="@mipmap/position"
            android:drawablePadding="2dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/h5" />

    </RelativeLayout>

</layout>