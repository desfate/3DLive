<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/user_info_rly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_mine_background">


        <ImageView
            android:id="@+id/message_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/face"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/message_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:text="直播小助手"
            android:textColor="@color/color_text_selected"
            android:textSize="14sp"
            android:paddingTop="2dp"
            app:layout_constraintLeft_toRightOf="@+id/message_img"
            app:layout_constraintTop_toTopOf="@+id/message_img"
            />

        <TextView
            android:id="@+id/message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:text="可能认识的人"
            android:textColor="@color/color_user_name"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@+id/message_img"
            app:layout_constraintTop_toBottomOf="@+id/message_name" />


        <Button
            android:id="@+id/care_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/friend_care_background"
            android:text="关注"
            android:textColor="@color/colorTextWhite"
            android:textSize="12sp"
            android:layout_marginRight="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
